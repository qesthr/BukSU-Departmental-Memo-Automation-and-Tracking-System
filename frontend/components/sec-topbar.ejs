<header class="top-bar">
	<% if (path !== '/calendar') { %>
		<div class="search-container">
			<button class="search-btn" aria-label="Search">
				<i data-lucide="search"></i>
			</button>
			<input type="text" placeholder="Search anything in Memofy..." class="search-input" aria-label="Search anything in Memofy" id="globalSearchInput">
		</div>
		<script src="/js/contextual-search.js"></script>
	<% } %>

	<div class="header-actions">
		<button class="notification-btn" aria-label="Notifications">
			<i data-lucide="bell"></i>
			<span class="notification-badge" aria-hidden="true"></span>
		</button>
		<div class="profile-section">
			<img src="<%= user.profilePicture || '/images/memofy-logo.png' %>" alt="Secretary Profile" class="profile-img">
			<span class="admin-badge">Secretary</span>
		</div>
	</div>
</header>

<script src="/js/notifications.js"></script>


