<script>(function(){try{if(!document.querySelector('meta[name="viewport" ]')){var m=document.createElement('meta');m.name='viewport';m.content='width=device-width, initial-scale=1.0';document.head.appendChild(m);}}catch(_){}})();</script>
<div class="container">
    <div class="left-panel">
