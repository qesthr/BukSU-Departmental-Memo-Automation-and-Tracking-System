<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - BukSU Departmental Memo System</title>
    <link rel="stylesheet" href="/css/login.css">
    <style>
        .dashboard-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .dashboard-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .welcome-message {
            font-size: 24px;
            color: #333;
            margin-bottom: 10px;
        }

        .user-info {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }

        .user-info h3 {
            margin-top: 0;
            color: #495057;
        }

        .user-detail {
            margin: 8px 0;
            font-size: 16px;
        }

        .logout-btn {
            display: inline-block;
            padding: 12px 24px;
            background: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background 0.3s;
        }

        .logout-btn:hover {
            background: #c82333;
        }

        .dashboard-actions {
            text-align: center;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <img src="/images/Buksu-Logo.png" alt="BukSU Logo" style="width: 80px; height: auto; margin-bottom: 20px;">
            <h1>Welcome to BukSU Departmental Memo System</h1>
        </div>

        <div class="welcome-message">
            Welcome back, <%= user.firstName %> <%= user.lastName %>!
        </div>

        <div class="user-info">
            <h3>Your Account Information</h3>
            <div class="user-detail"><strong>Email:</strong> <%= user.email %></div>
            <div class="user-detail"><strong>Role:</strong> <%= user.role %></div>
            <div class="user-detail"><strong>Department:</strong> <%= user.department || 'Not specified' %></div>
            <div class="user-detail"><strong>Employee ID:</strong> <%= user.employeeId || 'Not specified' %></div>
            <div class="user-detail"><strong>Last Login:</strong> <%= user.lastLogin ? new Date(user.lastLogin).toLocaleString() : 'First login' %></div>
        </div>

        <div class="dashboard-actions">
            <a href="/auth/logout" class="logout-btn">Logout</a>
        </div>
    </div>

    <script>
        // Auto logout after 24 hours of inactivity
        let logoutTimer;

        function resetTimer() {
            clearTimeout(logoutTimer);
            logoutTimer = setTimeout(() => {
                window.location.href = '/auth/logout';
            }, 24 * 60 * 60 * 1000); // 24 hours
        }

        // Reset timer on user activity
        document.addEventListener('mousemove', resetTimer);
        document.addEventListener('keypress', resetTimer);
        document.addEventListener('click', resetTimer);

        // Start timer
        resetTimer();
    </script>
</body>
</html>
