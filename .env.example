# Server Configuration
PORT=5000
NODE_ENV=development

# Session Configuration
# IMPORTANT: Generate a strong random secret for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-very-long-random-secret-key-here-change-this-in-production

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-from-google-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-google-console
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Email Domain Restriction
# Only allow emails from this domain to authenticate
ALLOWED_EMAIL_DOMAIN=buksu.edu.ph

# MongoDB Configuration
# For local development: mongodb://localhost:27017/buksu-memo-system
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=mongodb://localhost:27017/buksu-memo-system

# reCAPTCHA Configuration (Optional)
# Get these from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
